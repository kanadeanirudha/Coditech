@model ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
}
<!-- Page Content-->
<div class="page-content mt-5">
    <div class="row vh-100 d-flex justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="card-title">Change Password</h4>
                        </div><!--end col-->
                    </div> <!--end row-->
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("ChangePassword", controllerName, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        ;
                        @Html.HiddenFor(m => m.UserMasterId)
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-lg-10">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.CurrentPassword, new { @class = "form-label required"})
                                        @Html.TextBoxFor(x => x.CurrentPassword, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.CurrentPassword)
                                    </div>

                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.NewPassword, new { @class = "form-label required"})
                                        @Html.TextBoxFor(x => x.NewPassword, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.NewPassword)
                                    </div>

                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.ConfirmPassword, new { @class = "form-label required"})
                                        @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control", Type="Password" })
                                        @Html.ValidationMessageFor(x => x.ConfirmPassword)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success">@AdminResources.LabelSave</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
