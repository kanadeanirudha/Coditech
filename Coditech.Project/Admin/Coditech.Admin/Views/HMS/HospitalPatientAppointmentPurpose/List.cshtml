                    </div>
                    <div class="card-body">
                        <div id="DataTablesDivId" class="dataTables_wrapper dt-bootstrap5 no-footer">
                            @Html.Partial("~/Views/HMS/HospitalPatientAppointmentPurpose/_List.cshtml", Model)
