@model HospitalDoctorOPDScheduleViewModel
@{
    ViewBag.Title = "HospitalDoctorOPDSchedule";
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
}
@using (Html.BeginForm(actionName, controllerName, FormMethod.Post))
{
    <div class="row">
        @Html.HiddenFor(m => m.HospitalDoctorId)
        @Html.HiddenFor(m => m.WeekDayEnumId)
        @Html.HiddenFor(m => m.HospitalDoctorOPDScheduleMorningId)
        @Html.HiddenFor(m => m.HospitalDoctorOPDScheduleEveningId)
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    <span class="card-title">Morning</span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="mb-3">
                                @Html.LabelFor(x => x.FromTimeMorning, new { @class = "form-label required" })
                                @Html.TextBoxFor(x => x.FromTimeMorning, new { @class = "form-control", type = "time" })
                                @Html.ValidationMessageFor(x => x.FromTimeMorning)
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="mb-3">
                                @Html.LabelFor(x => x.UptoTimeMorning, new { @class = "form-label required" })
                                @Html.TextBoxFor(x => x.UptoTimeMorning, new { @class = "form-control", type = "time" })
                                @Html.ValidationMessageFor(x => x.UptoTimeMorning)
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="mb-3">
                                @Html.LabelFor(x => x.TimeSlotInMinuteMorning, new { @class = "form-label required" })
                                @Html.Partial("~/Views/Shared/Control/_DropdownList.cshtml", new DropdownViewModel()
                       {
                           DropdownSelectedValue = Model.TimeSlotInMinuteMorning.ToString(),
                           DropdownName = "TimeSlotInMinuteMorning",
                           GroupCode = DropdownTypeEnum.HospitalDoctorTimeSlot.ToString(),
                           IsRequired = true,
                           IsTextValueSame = true
                       })
                                @Html.ValidationMessageFor(x => x.TimeSlotInMinuteMorning)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    <span class="card-title">Evening</span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="mb-3">
                                @Html.LabelFor(x => x.FromTimeEvening, new { @class = "form-label required" })
                                @Html.TextBoxFor(x => x.FromTimeEvening, new { @class = "form-control", type = "time" })
                                @Html.ValidationMessageFor(x => x.FromTimeEvening)
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="mb-3">
                                @Html.LabelFor(x => x.UptoTimeEvening, new { @class = "form-label required" })
                                @Html.TextBoxFor(x => x.UptoTimeEvening, new { @class = "form-control", type = "time" })
                                @Html.ValidationMessageFor(x => x.UptoTimeEvening)
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="mb-3">
                                @Html.LabelFor(x => x.TimeSlotInMinuteEvening, new { @class = "form-label required" })
                                @Html.Partial("~/Views/Shared/Control/_DropdownList.cshtml", new DropdownViewModel()
                       {
                           DropdownSelectedValue = Model.TimeSlotInMinuteEvening.ToString(),
                           DropdownName = "TimeSlotInMinuteEvening",
                           GroupCode = DropdownTypeEnum.HospitalDoctorTimeSlot.ToString(),
                           IsRequired = true,
                           IsTextValueSame = true
                       })
                                @Html.ValidationMessageFor(x => x.TimeSlotInMinuteEvening)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-success">@AdminResources.LabelSave</button>
    <a href="../@controllerName/Cancel?SelectedCentreCode=@Model.SelectedCentreCode&SelectedDepartmentId=@Model.SelectedDepartmentId" class="btn btn-secondary"><i class="ft-x"></i>@AdminResources.LabelCancel</a>

}