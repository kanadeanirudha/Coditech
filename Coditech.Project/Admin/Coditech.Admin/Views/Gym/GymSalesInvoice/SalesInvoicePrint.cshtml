@model SalesInvoicePrintModel
@{
    ViewBag.Title = "Gym Sale Invoice";
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
    string applicationLogoPath = CoditechAdminSettings.ApplicationLogoPath;
}
<!-- Page Content-->
<div class="page-content mt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card">
                    <div class="card-header">
                        <input type="hidden" id="SelectedCentreCode" value="@Model.CentreCode" />
                        <span class="card-title">Gym Sales Invoice</span>
                        <a class="btn btn-success" href="/@controllerName/SaleInvoiceList/">Back</a>
                    </div>
                    <div id="PrintSalesInvoiceDivId">
                        <div class="card-body invoice-head">
                            <div class="row">
                                <div class="col-md-2 align-self-center">
                                    <img src="@applicationLogoPath" alt="logo-small" class="logo-sm me-1" height="50">
                                </div>
                                <div class="col-md-8 align-self-center">
                                    <p class="mt-2 mb-0 font-24">@Model.OrganisationCentreInvoicePrintingFormat.PrintingLine1</p>
                                    <p class="mt-2 mb-0 text-muted">@Model.OrganisationCentreInvoicePrintingFormat.PrintingLine2</p>
                                    <p class="mt-2 mb-0 text-muted">@Model.OrganisationCentreInvoicePrintingFormat.PrintingLine3</p>
                                </div>
                                @*  <div class="col-md-7">
                                <ul class="list-inline mb-0 contact-detail float-end">
                                @if (!string.IsNullOrEmpty(@Model.OrganisationCentreModel.Url))
                                {
                                <li class="list-inline-item">
                                <div class="ps-3">
                                <i class="mdi mdi-web"></i>
                                <p class="text-muted mb-0">@Model.OrganisationCentreModel.Url</p>
                                </div>
                                </li>
                                }
                                <li class="list-inline-item">
                                <div class="ps-3">
                                <i class="mdi mdi-phone"></i>
                                <p class="text-muted mb-0">@Model.OrganisationCentreModel.PhoneNumberOffice</p>
                                <p class="text-muted mb-0">@Model.OrganisationCentreModel.CellPhone</p>
                                </div>
                                </li>
                                <li class="list-inline-item">
                                <div class="ps-3">
                                <i class="mdi mdi-map-marker"></i>
                                <p class="text-muted mb-0">@Model.OrganisationCentreModel.CentreAddress,</p>
                                <p class="text-muted mb-0">@Model.OrganisationCentreModel.StreetName, @Model.OrganisationCentreModel.Pincode</p>
                                </div>
                                </li>
                                </ul>
                                </div> *@
                            </div><!--end row-->
                        </div><!--end card-body-->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="">
                                        <h6 class="mb-0"><b>Order Date : </b>@Model.TransactionDate.ToShortDateString()</h6>
                                        <h6><b>Invoice Number : </b>#@Model.InvoiceNumber</h6>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="float-left">
                                        <address class="font-13">
                                            <strong class="font-14">Billed To :</strong><br>
                                            @Model.CustomerInformation.FirstName @Model.CustomerInformation.LastName<br>
                                            Mob: @Model.CustomerInformation.MobileNumber<br>
                                            Email: @Model.CustomerInformation.EmailId<br>
                                        </address>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="">
                                        <address class="font-13">
                                            <strong class="font-14">Billed From :</strong><br>
                                            @Model.OrganisationCentreModel.CentreName<br>
                                            @Model.OrganisationCentreModel.CentreAddress,
                                            @Model.OrganisationCentreModel.Pincode<br>
                                            Phone No: @Model.OrganisationCentreModel.PhoneNumberOffice<br>
                                            @if (!string.IsNullOrEmpty(@Model.OrganisationCentreModel.GSTINNumber))
                                            {
                                                <span>GSTIN: @Model.OrganisationCentreModel.GSTINNumber</span>
                                                <br>
                                            }

                                        </address>
                                    </div>
                                </div>
                            </div><!--end row-->

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="table-responsive project-invoice">
                                        <table class="table table-bordered mb-0">
                                            <thead class="thead-light">
                                                <tr>
                                                    <th>Description</th>
                                                    <th>Quantity</th>
                                                    <th>Amount</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.SalesInvoiceDetailsList)
                                                {
                                                    <tr>
                                                        <td>
                                                            <h5 class="mt-0 mb-1 font-14">@item.ItemName</h5>
                                                            <p class="mb-0 text-muted">HSN/SAC Code : @item.HSNSACCode</p>
                                                            <p class="mb-0 text-muted">Plan : @item.ItemDescription</p>
                                                        </td>
                                                        <td>@item.ItemQuantity</td>
                                                        <td>@AdminGeneralHelper.FormatPriceWithCurrency(@item.ItemAmount)</td>
                                                    </tr>
                                                }
                                                <tr>
                                                    <td colspan="1"></td>
                                                    <td class="font-14 text-dark"><b>Sub Total</b></td>
                                                    <td class="font-14 text-dark"><b>@AdminGeneralHelper.FormatPriceWithCurrency(@Model.NetAmount)</b></td>
                                                </tr>
                                                <tr>
                                                    <th colspan="1"></th>
                                                    <td class="font-14 text-dark"><b>Tax Rate</b></td>
                                                    <td class="font-14 text-dark"><b>@AdminGeneralHelper.FormatPriceWithCurrency(@Model.TaxAmount)</b></td>
                                                </tr>
                                                <tr>
                                                    <th colspan="1"></th>
                                                    <td class="font-14 text-dark"><b>Discount</b></td>
                                                    <td class="font-14 text-dark"><b>@AdminGeneralHelper.FormatPriceWithCurrency(@Model.DiscountAmount)</b></td>
                                                </tr>
                                                <tr>
                                                    <th colspan="1"></th>
                                                    <td class="font-14 text-dark"><b>Total</b></td>
                                                    <td class="font-14 text-dark"><b>@AdminGeneralHelper.FormatPriceWithCurrency(@Model.TotalAmount)</b></td>
                                                </tr>
                                                <tr class="thead-light">
                                                    <th colspan="1"></th>
                                                    <th class="font-14 text-dark"><b>Paid Amount</b></th>
                                                    <th class="font-14 text-dark"><b>@AdminGeneralHelper.FormatPriceWithCurrency(@Model.BillAmount)</b></th>
                                                </tr>
                                            </tbody>
                                        </table><!--end table-->
                                    </div>  <!--end /div-->
                                </div>
                            </div><!--end row-->
                            <div class="row">
                                <div class="col-lg-6">
                                    <h5 class="mt-4">Payment Details</h5>
                                    <ul class="ps-3">
                                        <li><small class="font-12">Payment Mode : @Model.PaymentType</small></li>
                                        <li><small class="font-12">Transaction Reference : @Model.TransactionReference</small></li>
                                        <li><small class="font-12">Transaction Date : @Model.TransactionDate</small></li>
                                    </ul>
                                </div>
                            </div><!--end row-->
                            <div class="row justify-content-center">
                                <div class="col-lg-8">
                                    <h5 class="mt-4">Terms And Condition :</h5>
                                    <ul class="ps-3">
                                        <li><small class="font-12"> Towels & Deodorant should be used at all times, for hygiene reasons.</small></li>
                                        <li><small class="font-12"> Normal footwear must be removed outside & sports shoes must be worn for workouts.</small></li>
                                        <li><small class="font-12"> Getting non-members along is not permitted.</small></li>
                                        <li><small class="font-12"> Do not open the door for anyone.</small></li>
                                        <li><small class="font-12"> Do not block the equipment, please share.</small></li>
                                        <li><small class="font-12"> Rerack the weights back in the right place after use.</small></li>
                                        <li><small class="font-12"> Do not drop/throw weights on the floor.</small></li>
                                        <li><small class="font-12"> It’s a unisex gym, please maintain discipline.</small></li>
                                    </ul>
                                </div>
                                <div class="col-lg-4 align-self-end">
                                    <div class="float-end">
                                        @* <small>Account Manager</small> *@
                                        <img src="../assets/images/signature.png" alt="" class="mt-2 mb-1" height="26" width="150">
                                        <p class="border-top">Account Manager</p>
                                    </div>
                                </div>
                            </div><!--end row-->
                            <hr>
                            <div class="row d-flex justify-content-center">
                                <div class="col-lg-12 col-xl-4 ms-auto align-self-center">
                                    <div class="text-center"><small class="font-12">Thank you very much for doing business with us.</small></div>
                                </div>
                                <div class="col-lg-12 col-xl-4">
                                    <div class="float-end d-print-none">
                                        <input type="button" class="btn btn-soft-info btn-sm" value="Print" onclick="GymSalesInvoice.Print()" />
                                    </div>
                                </div>
                            </div><!--end row-->
                        </div><!--end card-body-->
                    </div>
                </div><!--end card-->
            </div>
        </div><!--end row-->
    </div>
</div>
<script src="~/js/coditech/gym/gymsalesinvoice.js"></script>