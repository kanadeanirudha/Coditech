@model OrganisationCentrewiseBuildingRoomsViewModel
@{
    ViewBag.Title = Model.OrganisationCentrewiseBuildingRoomId > 0 ? "Update Organisation Centrewise Building Rooms" : "Add Organisation Centrewise Building Rooms";
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
}
<!-- Page Content-->
<div class="page-content mt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col">
                                @if (Model.OrganisationCentrewiseBuildingRoomId > 0)
                                {
                                    <h4 class="card-title">Update Organisation Centrewise Building Rooms</h4>
                                }
                                else
                                {
                                    <h4 class="card-title">Create Organisation Centrewise Building Rooms</h4>
                                }
                            </div><!--end col-->
                        </div>  <!--end row-->
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm(actionName, controllerName, FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.OrganisationCentrewiseBuildingRoomId)
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.RoomName, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.RoomName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.RoomName)
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.OrganisationCentrewiseBuildingMasterId, new { @class = "form-label" })
                                      @*   @Html.Partial("~/Views/Shared/Control/_DropdownList.cshtml", new DropdownViewModel()
                                    {
                                    DropdownType = DropdownTypeEnum.FinancialYear.ToString(),
                                    DropdownName = "GeneralFinancialYearId",
                                    DropdownSelectedValue = Model.GeneralFinancialYearId.ToString()
                                    }) *@
                                        @Html.ValidationMessageFor(x => x.OrganisationCentrewiseBuildingMasterId)
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.BuildFloorEnumId, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.BuildFloorEnumId, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.BuildFloorEnumId)
                                    </div>
                                </div>
                                @* <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.KeyFieldEnumId, new { @class = "form-label required" })
                                        @Html.Partial("~/Views/Shared/Control/_DropdownList.cshtml", new DropdownViewModel()
                                    {
                                    DropdownSelectedValue = Model.KeyFieldEnumId.ToString(),
                                    DropdownName = "KeyFieldEnumId",
                                    GroupCode = DropdownTypeEnum.GeneralRunningNumberFor.ToString()
                                    })   @Html.ValidationMessageFor(x => x.KeyFieldEnumId)
                                    </div>
                                </div> *@
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.Area, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.Area, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.Area)
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">@AdminResources.LabelSave</button>
                            <a href="../@controllerName/List" class="btn btn-secondary"><i class="ft-x"></i>@AdminResources.LabelCancel</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
