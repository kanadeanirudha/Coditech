@model OrganisationCentrewiseEmailTemplateViewModel
@{
    ViewBag.Title = "Organisation Centrewise Email Template";
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
    Dictionary<string, string> keyValuePairs = new Dictionary<string, string>();
    keyValuePairs.Add("OrganisationCentre", Model.CentreCode.ToString());
}
<!-- Page Content-->
<div class="page-content">
    <div class="container-fluid">
        <!-- Page-Title -->
        <div class="row">
            <div class="col-lg-2">
                @Html.Partial("~/Views/Organisation/OrganisationCentre/_OrganisationCentreSidePannel.cshtml", keyValuePairs)
            </div>
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-body">
                        @using (Html.BeginForm(actionName, controllerName, FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.OrganisationCentrewiseEmailTemplateId)
                            <div class="row">                          
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.Subject, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.Subject)
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.EmailTemplate, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.EmailTemplate, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.EmailTemplate)
                                    </div>
                                </div>                             
                            </div>                      
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/Coditech/Organisation/OrganisationCentrewiseEmailTemplate.js"></script>
<script>
    $(document).ready(function () {
        OrganisationCentrewiseEmailTemplate.GetEmailTemplateByCentreCode(@Model.CentreCode);
    });
</script>
