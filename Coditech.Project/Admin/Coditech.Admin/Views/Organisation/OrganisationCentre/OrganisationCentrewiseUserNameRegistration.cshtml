@model OrganisationCentrewiseUserNameRegistrationViewModel
@{
    ViewBag.Title = "Organisation Centrewise UserName Registration";
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
}
<div class="page-content mt-5">
    <div class="container-fluid">
        <div class="row">
            @if (Model.OrganisationCentrewiseUserNameRegistrationId > 0)
            {
                <div class="col-lg-2">
                    @Html.Partial("~/Views/Organisation/OrganisationCentre/_OrganisationCentreSidePannel.cshtml", Model.OrganisationCentrewiseUserNameRegistrationId.ToString())
                </div>
            }
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col">
                                <h4 class="card-title">Organisation Centrewise UserName Registration</h4>
                            </div><!--end col-->
                        </div><!--end row-->
                    </div>
                    <div class="card">
                        <div class="card-body">
                            @using (Html.BeginForm(actionName, controllerName, FormMethod.Post))
                            {
                                @Html.HiddenFor(m => m.OrganisationCentrewiseUserNameRegistrationId)
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            @Html.LabelFor(x => x.CentreCode, new { @class = "form-label " })
                                            @Html.TextBoxFor(x => x.CentreCode, new { @class = "form-control", @disabled = "disabled" })
                                            @Html.ValidationMessageFor(x => x.CentreCode)
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            @Html.LabelFor(x => x.UserType, new { @class = "form-label required" })
                                            @Html.TextBoxFor(x => x.UserType, new { @class = "form-control", @readonly = "readonly" })
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            @Html.LabelFor(x => x.UserNameBasedOn, new { @class = "form-label required" })
                                            @Html.TextBoxFor(x => x.UserNameBasedOn, new { @class = "form-control"})
                                            @Html.ValidationMessageFor(x => x.UserNameBasedOn)
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-success">@AdminResources.LabelSave</button>
                                <a href="../@controllerName/List" class="btn btn-secondary"><i class="ft-x"></i>@AdminResources.LabelCancel</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

