@model Coditech.Model.OrganisationCentrewiseSmsSettingModel

@{
    ViewBag.Title = "Organisation Centrewise SMS Setting";
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
}

<div class="page-content mt-5">
    <div class="container-fluid">
        <div class="row">
            @if (Model.OrganisationCentrewiseSmsSettingId > 0)
            {
                <div class="col-lg-2">
                    @Html.Partial("~/Views/Organisation/OrganisationCentre/_OrganisationCentreSidePannel.cshtml", Model.OrganisationCentrewiseSmsSettingId.ToString())
                </div>
            }
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col">
                                <h4 class="card-title">Organisation Centrewise SMS Setting</h4>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm(actionName, controllerName, FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.OrganisationCentrewiseSmsSettingId)
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.CentreName, new { @class = "form-label" })
                                        @Html.TextBoxFor(x => x.CentreName, new { @class = "form-control", @disabled = "disabled" })
                                        @Html.ValidationMessageFor(x => x.CentreName)
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.CentreCode, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.CentreCode, new { @class = "form-control", @readonly = "readonly" })
                                        @Html.ValidationMessageFor(x => x.CentreCode)
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.SmsPortalAccountId, new { @class = "form-label" })
                                        @Html.TextBoxFor(x => x.SmsPortalAccountId, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.SmsPortalAccountId)
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.AuthToken, new { @class = "form-label" })
                                        @Html.TextBoxFor(x => x.AuthToken, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.AuthToken)
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.FromMobileNumber, new { @class = "form-label" })
                                        @Html.TextBoxFor(x => x.FromMobileNumber, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.FromMobileNumber)
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.IsSMSSettingEnabled, new { @class = "form-label" })
                                        <div class="form-check">
                                            @Html.CheckBoxFor(x => x.IsSMSSettingEnabled, new { @class = "form-check-input" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">@AdminResources.LabelSave</button>
                            <a href="../@controllerName/List" class="btn btn-secondary"><i class="ft-x"></i>@AdminResources.LabelCancel</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
