@model OrganisationCentrewiseEmailTemplateViewModel
@{
    Layout = null;
    TinymceTextboxViewModel tinymceEmailTemplateTextboxViewModel = new TinymceTextboxViewModel() { Id = "EmailTemplate", Data = Model.EmailTemplate };
}
<div class="col-lg-12">
    <div class="mb-3">
        @Html.LabelFor(x => x.Subject, new { @class = "form-label required" })
        @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Subject)
    </div>
</div>
<div class="col-lg-12">
    <div class="mb-3">
        @Html.LabelFor(x => x.EmailTemplate, new { @class = "form-label required" })
        @Html.Partial("~/Views/Shared/Control/_TinymceTextbox.cshtml", tinymceEmailTemplateTextboxViewModel)
        @Html.ValidationMessageFor(x => x.EmailTemplate)
    </div>
</div>
<div class="col-lg-4">
    <div class="mb-3">
        @Html.LabelFor(x => x.IsActive, new { @class = "form-label" })
        <div class="form-check">
            @Html.CheckBoxFor(x => x.IsActive, new { @class = "form-check-input" })
        </div>
    </div>
</div>
