@using Coditech.Admin.Utilities;
@model GazetteChaptersPageDetailViewModel
@{
    ViewBag.Title = Model.GazetteChapterPageDetailId > 0 ? "Update Gazette Chapter Page Detail" : "Add Gazette Chapter Page Detail";
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
}
<!-- Page Content-->
<div class="page-content mt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row align-item-center">
                            <div class="col">
                                @if (Model.GazetteChapterPageDetailId > 0)
                                {
                                    <h4 class="card-title">Update Gazette Chapter Page Detail</h4>
                                }
                                else
                                {
                                    <h4 class="card-title">Create Gazette Chapter Page Detail</h4>
                                }
                            </div><!--end col-->
                        </div><!--end row-->
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm(actionName, controllerName, FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.GazetteChapterId)
                            @Html.HiddenFor(m => m.GazetteChapterPageDetailId)
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.ChapterNumber, new { @class = "form-label" })
                                        @Html.TextBoxFor(x => x.ChapterNumber, new { @class = "form-control", @readonly = "readonly" })
                                        @Html.ValidationMessageFor(x => x.ChapterNumber)
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.ChapterName, new { @class = "form-label" })
                                        @Html.TextBoxFor(x => x.ChapterName, new { @class = "form-control", @readonly = "readonly" })
                                        @Html.ValidationMessageFor(x => x.ChapterName)
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.DistrictName, new { @class = "form-label" })
                                        @Html.TextBoxFor(x => x.DistrictName, new { @class = "form-control", @readonly = "readonly" })
                                        @Html.ValidationMessageFor(x => x.DistrictName)
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.PageHeader, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.PageHeader, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.PageHeader)
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.PageFooter, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.PageFooter, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.PageFooter)
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.PageContent, new { @class = "form-label required" })
                                        @Html.Partial("~/Views/Shared/Control/_HTMLEditor.cshtml", new HTMLEditorViewModel()
                               {
                                   EditorName = "PageContent",
                                   EditorValue = Model.PageContent
                               })
                                        @Html.ValidationMessageFor(x => x.PageContent)
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">@AdminResources.LabelSave</button>
                            <a href="../@controllerName/List" class="btn btn-secondary"><i class="ft-x"></i>@AdminResources.LabelCancel</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
