@using Coditech.Admin.Helpers
@model DropdownViewModel
@{
    CoditechDropdownHelper.GeneralDropdownList(Model);
}
@if (Model.IsDisabled)
{
    @Html.DropDownList(Model.DropdownName, Model.DropdownList, new { @class = "form-control", @onchange = Model.ChangeEvent, @readonly = "true" })
}
else
{
    @Html.DropDownList(Model.DropdownName, Model.DropdownList, new { @class = "form-control", @onchange = Model.ChangeEvent })
}