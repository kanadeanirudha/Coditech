@using Coditech.Admin.Utilities;
@using Coditech.Common.API.Model;
@model List<UserMenuModel>
@{
    Layout = null;
}
@if (Model?.Count > 0)
{
    @foreach (UserMenuModel itemParent in Model.Where(x => x.ParentMenuCode == null).OrderBy(y => y.MenuDisplaySeqNo))
    {
        <li class="has-submenu last-elements">
            <a href="#">
                <span>
                    @if (!string.IsNullOrEmpty(itemParent.MenuIconName))
                    {
                        <i class="@itemParent.MenuIconName"></i>
                    }
                    @itemParent.MenuName
                </span>
            </a>
            <ul class="submenu">
                @foreach (UserMenuModel itemMenu in Model.Where(x => x.ParentMenuCode == itemParent.MenuCode).OrderBy(y => y.MenuDisplaySeqNo))
                {
                    <li>
                        <a href="/@itemMenu.MenuLink">
                            @if (!string.IsNullOrEmpty(itemMenu.MenuIconName))
                            {
                                <i class="@itemMenu.MenuIconName"></i>
                            }
                            @itemMenu.MenuName
                        </a>
                    </li>
                }
            </ul>
        </li>
    }
}