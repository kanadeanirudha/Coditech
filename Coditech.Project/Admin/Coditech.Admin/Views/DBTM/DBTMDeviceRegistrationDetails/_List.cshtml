@model DBTMDeviceRegistrationDetailsListViewModel
@{
    Layout = null;
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
}
<div class="row">
    @Html.Partial("~/Views/Shared/Datatable/_DatatableShowResult.cshtml", Model.PageListViewModel.RecordPerPage)
    @Html.Partial("~/Views/Shared/Datatable/_DatatableSearchData.cshtml", Model.PageListViewModel.SearchBy)
</div>
<div class="row">
    <div class="col-sm-12 table-responsive">
        <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline" style="border-collapse: collapse; border-spacing: 0px; width: 100%;" role="grid" aria-describedby="datatable_info">
            <thead >
            <tr>
                <th class="sorting " onclick="CoditechDataTable.LoadListSortBy('dbtmdeviceregistrationdetails','list','DeviceSerialCode','desc')">Device Serial Code</th>
                <th class="sorting" onclick="CoditechDataTable.LoadListSortBy('dbtmdeviceregistrationdetails','list','DeviceSerialCode','desc')">Device Name</th>
                <th class="sorting" onclick="CoditechDataTable.LoadListSortBy('dbtmdeviceregistrationdetails','list','DeviceSerialCode','desc')">Purchase Date</th>
                <th class="sorting" onclick="CoditechDataTable.LoadListSortBy('dbtmdeviceregistrationdetails','list','DeviceSerialCode','desc')">Is Master Device</th>
            </tr>
        </thead>
            <tbody>
                @if (Model?.RegistrationDetailsList?.Count > 0)
                {
                    foreach (var item in Model?.RegistrationDetailsList)
                   {
                     <tr>
                        <td>@item.DeviceSerialCode</td>
                              <td>@item.DeviceName</td>
                              <td>@item.PurchaseDate.ToCoditechDateFormat()</td>
                              <td> @Html.Partial("~/Views/Shared/Datatable/_DatatableTrueFalse.cshtml", item.IsMasterDevice)</td>
                     </tr>
                   }
                }
            </tbody>
        </table>
    </div>
</div>
@Html.Partial("~/Views/Shared/Datatable/_DatatablePagination.cshtml", Model.PageListViewModel)
