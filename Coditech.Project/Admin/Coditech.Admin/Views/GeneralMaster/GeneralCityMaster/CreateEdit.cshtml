@using Coditech.Admin.Utilities;
@model GeneralCityViewModel
@{
    ViewBag.Title = Model.GeneralCityMasterId > 0 ? "Update City" : "Add City";
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
    DropdownViewModel cityDropdown = new DropdownViewModel() { DropdownType = DropdownTypeEnum.City.ToString(), DropdownName = "CityID", DropdownSelectedValue = Convert.ToString(Model.GeneralCityMasterId) };
    DropdownViewModel regionDropdown = new DropdownViewModel() { DropdownType = DropdownTypeEnum.RegionName.ToString(), DropdownName = "RegionName", DropdownSelectedValue = Convert.ToString(Model.GeneralRegionMasterId) };
}
<!-- Page Content-->
<div class="page-content">
    <div class="container-fluid">
        <!-- Page-Title -->
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="row">
                        <div class="col">
                            @if (Model.GeneralCityMasterId > 0)
                            {
                                <h4 class="page-title">Update City</h4>
                            }
                            else
                            {
                                <h4 class="page-title">Create City</h4>
                            }
                        </div><!--end col-->
                    </div><!--end row-->
                </div><!--end page-title-box-->
            </div><!--end col-->
        </div><!--end row-->
        <!-- end page title end breadcrumb -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        @using (Html.BeginForm(actionName, controllerName, FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.GeneralCityMasterId)
                            @Html.HiddenFor(m => m.DefaultFlag)
                            @Html.HiddenFor(m => m.GeneralRegionMasterId)
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.CityName, new { @class = "form-label required" })
                                        @Html.Partial("~/Views/Shared/Control/_DropdownList.cshtml",cityDropdown)
                                        @Html.HiddenFor(x=>x.CityName)
                                        @Html.ValidationMessageFor(x => x.CityName)
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.TinNumber, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.TinNumber, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.TinNumber)
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    @* <div class="mb-3">
                                        @Html.LabelFor(x => x.GeneralRegionMasterId, new { @class = "form-label required" })
                                        @Html.Partial("~/views/shared/control/_dropdownlist.cshtml",regionDropdown)
                                        @*  @html.textboxfor(x => x.regionname, new { @class = "form-control" }) 
                                        @Html.ValidationMessageFor(x => x.GeneralRegionMasterId)
                                    </div> *@
                                    <div class="mb-3">
                                        <div class="form-check">
                                            @Html.CheckBoxFor(x => x.DefaultFlag, new { @class = "form-check-input" })
                                            @Html.LabelFor(x => x.DefaultFlag, new { @class = "form-check-label" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success" onclick="BindCityName()">@AdminResources.LabelSave</button>
                            <a href="../@controllerName/List" class="btn btn-secondary"><i class="ft-x"></i>@AdminResources.LabelCancel</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $(function () {
            $('#GeneralRegionMasterIds').multiselect({
                includeSelectAllOption: true,
                //selectAllValue: 'multiselect-all',
                enableFiltering: true,
                enableCaseInsensitiveFiltering: true,
                buttonWidth: '100%',
            });
            

        });
    });
    function BindCityName() {
        $('#CityName').val($("#CityID option:selected").text());
    };
</script>