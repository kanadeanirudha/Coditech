@model InventoryGeneralItemMasterViewModel
@{
	ViewBag.Title = Model.InventoryGeneralItemMasterId > 0 ? "Update Inventory General Item Master" : "Add Inventory General Item Master";
	string controllerName = ViewContext.RouteData.Values["controller"].ToString();
	string actionName = ViewContext.RouteData.Values["action"].ToString();
	DropdownViewModel inventoryProductDimensionGroup = new DropdownViewModel() { DropdownType = DropdownTypeEnum.InventoryProductDimensionGroup.ToString(), DropdownName = "InventoryProductDimentionGroupId", DropdownSelectedValue = Model.InventoryProductDimentionGroupId.ToString(), ChangeEvent = "", Parameter = Model.InventoryProductDimentionGroupId.ToString() };
	DropdownViewModel inventoryStorageDimensionGroup = new DropdownViewModel() { DropdownType = DropdownTypeEnum.InventoryStorageDimensionGroup.ToString(), DropdownName = "InventoryStorageDimentionGroupId", DropdownSelectedValue = Model.InventoryStorageDimentionGroupId.ToString(), ChangeEvent = "", Parameter = Model.InventoryStorageDimentionGroupId.ToString() };
	DropdownViewModel inventoryItemTrackingDimensionGroup = new DropdownViewModel() { DropdownType = DropdownTypeEnum.InventoryItemTrackingDimensionGroup.ToString(), DropdownName = "InventoryTrackingDimentionGroupId", DropdownSelectedValue = Model.InventoryTrackingDimentionGroupId.ToString(), ChangeEvent = "", Parameter = Model.InventoryTrackingDimentionGroupId.ToString() };
	DropdownViewModel inventoryItemGroup = new DropdownViewModel() { DropdownType = DropdownTypeEnum.InventoryItemGroup.ToString(), DropdownName = "InventoryItemGroupId", DropdownSelectedValue = Model.InventoryItemGroupId.ToString(), ChangeEvent = "", Parameter = Model.InventoryItemGroupId.ToString() };
}

<!-- Page Content-->
<div class="page-content mt-5">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
				<div class="card">
					<div class="card-header">
						<div class="row align-items-center">
							<div class="col">
								@if (Model.InventoryGeneralItemMasterId > 0)
								{
									<h4 class="card-title">Update Inventory General Item Master</h4>
								}
								else
								{
									<h4 class="card-title">Create Inventory General Item Master</h4>
								}
							</div><!--end col-->
						</div><!--end row-->
					</div>
					<div class="card-body">
						@using (Html.BeginForm(actionName, controllerName, FormMethod.Post))
						{
							@Html.HiddenFor(m => m.InventoryGeneralItemMasterId)
							<div class="row">
								<div class="col-lg-4">
									<div class="mb-3">
										@Html.LabelFor(x => x.ProductTypeEnumId, new { @class = "form-label required" })
										@Html.Partial("~/Views/Shared/Control/_DropdownList.cshtml", new DropdownViewModel()
	{
		DropdownSelectedValue = Model.ProductTypeEnumId.ToString(),
		DropdownName = "ProductTypeEnumId",
		GroupCode = DropdownTypeEnum.InventoryProductType.ToString()
	})
										@Html.ValidationMessageFor(x => x.ProductTypeEnumId)
									</div>
								</div>

								<div class="col-lg-4">
									<div class="mb-3">
										@Html.LabelFor(x => x.ProductSubTypeEnumId, new { @class = "form-label required " })
										@Html.Partial("~/Views/Shared/Control/_DropdownList.cshtml", new DropdownViewModel()
	{
		DropdownSelectedValue = Model.ProductSubTypeEnumId.ToString(),
		DropdownName = "ProductSubTypeEnumId",
		GroupCode = DropdownTypeEnum.ProductSubType.ToString()
	})
										@Html.ValidationMessageFor(x => x.ProductSubTypeEnumId)
									</div>
								</div>

								<div class="col-lg-4">
									<div class="mb-3">
										@Html.LabelFor(x => x.ItemNumber, new { @class = "form-label required" })
										@Html.TextBoxFor(x => x.ItemNumber, new { @class = "form-control" })
										@Html.ValidationMessageFor(x => x.ItemNumber)
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-lg-4">
									<div class="mb-3">
										@Html.LabelFor(x => x.ItemName, new { @class = "form-label required" })
										@Html.TextBoxFor(x => x.ItemName, new { @class = "form-control" })
										@Html.ValidationMessageFor(x => x.ItemName)
									</div>
								</div>

								<div class="col-lg-4">
									<div class="mb-3">
										@Html.LabelFor(x => x.ItemDescription, new { @class = "form-label" })
										@Html.TextBoxFor(x => x.ItemDescription, new { @class = "form-control" })
										@Html.ValidationMessageFor(x => x.ItemDescription)
									</div>
								</div>

								<div class="col-lg-4">
									<div class="mb-3">
										@Html.LabelFor(x => x.HSNSACCode, new { @class = "form-label " })
										@Html.TextBoxFor(x => x.HSNSACCode, new { @class = "form-control" })
										@Html.ValidationMessageFor(x => x.HSNSACCode)
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-lg-4">
									<div class="mb-3">
										@Html.LabelFor(x => x.InventoryCategoryId, new { @class = "form-label required" })
										@Html.Partial("~/Views/Shared/Control/_DropdownList.cshtml", new DropdownViewModel()
	{
		DropdownType = DropdownTypeEnum.InventoryCategory.ToString(),
		DropdownName = "InventoryCategoryId",
		DropdownSelectedValue = Model.InventoryCategoryId.ToString()
	})
										@Html.ValidationMessageFor(x => x.InventoryCategoryId, null)
									</div>
								</div>
								<div class="col-lg-4">
									<div class="mb-3">
										@Html.LabelFor(x => x.GeneralTaxGroupMasterId, new { @class = "form-label required" })
										@Html.Partial("~/Views/Shared/Control/_DropdownList.cshtml", new DropdownViewModel()
	{
		DropdownType = DropdownTypeEnum.TaxGroup.ToString(),
		DropdownName = "GeneralTaxGroupMasterId",
		DropdownSelectedValue = Model.GeneralTaxGroupMasterId.ToString()
	})
										@Html.ValidationMessageFor(x => x.GeneralTaxGroupMasterId)
									</div>
								</div>

								<div class="col-lg-4">
									<div class="mb-3">
										@Html.LabelFor(x => x.InventoryModelEnumId, new { @class = "form-label " })
										@Html.Partial("~/Views/Shared/Control/_DropdownList.cshtml", new DropdownViewModel()
	{
		DropdownSelectedValue = Model.InventoryModelEnumId.ToString(),
		DropdownName = "InventoryModelEnumId",
		GroupCode = DropdownTypeEnum.InventoryModel.ToString()
	})
										@Html.ValidationMessageFor(x => x.InventoryModelEnumId, null)
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-lg-4">
									<div class="mb-3">
										@Html.LabelFor(x => x.InventoryProductDimentionGroupId, new { @class = "form-label" })
										@Html.Partial("~/Views/Shared/Control/_DropdownList.cshtml", inventoryProductDimensionGroup)
										@Html.ValidationMessageFor(x => x.InventoryProductDimentionGroupId)
									</div>
								</div>

								<div class="col-lg-4">
									<div class="mb-3">
										@Html.LabelFor(x => x.InventoryItemGroupId, new { @class = "form-label" })
										@Html.Partial("~/Views/Shared/Control/_DropdownList.cshtml", inventoryItemGroup)
										@Html.ValidationMessageFor(x => x.InventoryItemGroupId)
									</div>
								</div>

								<div class="col-lg-4">
									<div class="mb-3">
										@Html.LabelFor(x => x.InventoryStorageDimentionGroupId, new { @class = "form-label" })
										@Html.Partial("~/Views/Shared/Control/_DropdownList.cshtml", inventoryStorageDimensionGroup)
										@Html.ValidationMessageFor(x => x.InventoryStorageDimentionGroupId)
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-lg-4">
									<div class="mb-3">
										@Html.LabelFor(x => x.InventoryTrackingDimentionGroupId, new { @class = "form-label" })
										@Html.Partial("~/Views/Shared/Control/_DropdownList.cshtml", inventoryItemTrackingDimensionGroup)
										@Html.ValidationMessageFor(x => x.InventoryTrackingDimentionGroupId)
									</div>
								</div>

								<div class="col-lg-4">
									<div class="mb-3">
										@Html.LabelFor(x => x.IsActive, new { @class = "form-label" })
										<div class="form-check">
											@Html.CheckBoxFor(x => x.IsActive, new { @class = "form-check-input" })
										</div>
									</div>
								</div>
							</div>

							<button type="submit" class="btn btn-success">@AdminResources.LabelSave</button>
							<a href="../@controllerName/List" class="btn btn-secondary"><i class="ft-x"></i>@AdminResources.LabelCancel</a>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script src="~/js/coditech/inventory/inventorygeneralitemmaster.js"></script>
