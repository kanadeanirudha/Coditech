@using Coditech.Admin.Utilities;
@model AdminSanctionPostViewModel
@{
    ViewBag.Title = "Update Admin Sanction Post";
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
}
<!-- Page Content-->
<div class="page-content">
    <div class="container-fluid">
        <!-- Page-Title -->
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="row">
                        <div class="col">
                            <h4 class="page-title">Update Admin Sanction Post</h4>
                        </div><!--end col-->
                    </div><!--end row-->
                </div><!--end page-title-box-->
            </div><!--end col-->
        </div><!--end row-->
        <!-- end page title end breadcrumb -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        @using (Html.BeginForm(actionName, controllerName, FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.AdminSanctionPostId)
                            ;
                            @Html.HiddenFor(m => m.SelectedCentreCode)
                            ;
                            @Html.HiddenFor(m => m.SelectedDepartmentId)
                            ;
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.SelectedCentreCode, new { @class = "form-label" })
                                        @Html.TextBoxFor(x => x.CentreName, new { @class = "form-control", @disabled="disabled" })
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.SelectedDepartmentId, new { @class = "form-label" })
                                        @Html.TextBoxFor(x => x.DepartmentName, new { @class = "form-control" , @disabled="disabled" })
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.SanctionPostCode, new { @class = "form-label" })
                                        @Html.TextBoxFor(x => x.SanctionPostCode, new { @class = "form-control" , @disabled="disabled"})
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.SanctionedPostDescription, new { @class = "form-label" })
                                        @Html.TextBoxFor(x => x.SanctionedPostDescription, new { @class = "form-control"  , @disabled="disabled" })
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.NoOfPost, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.NoOfPost, new { @class = "form-control", @placeholder = "Number Of Post", @maxLength = "5", min="1", @type = "number" })
                                        @Html.ValidationMessageFor(x => x.NoOfPost)
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.IsActive, new { @class = "form-label" })
                                        <div class="form-check">
                                            @Html.CheckBoxFor(x => x.IsActive, new { @class = "form-check-input" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">@AdminResources.LabelSave</button>
                            <a href="../@controllerName/List" class="btn btn-secondary"><i class="ft-x"></i>@AdminResources.LabelCancel</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
